<%- include ../layouts/cabecera.ejs %> 
<br/><br/>
<div >
    
    <div class="card-body">
        <h5 class="card-title">Datos del Tipo de Pase</h5>
        <p class="card-text"></p>
        <form action="/tipos/guardar" method="post"> 
            <div class="mb-3">
                <label for="tipo_pase" class="form-label">Tipos de Pase</label>
                <select name="tipo_pase" id="tipo_pase" class="form-select" tabindex="1"> 
                        <option value="" selected disabled hidden>Seleccione una opci√≥n</option>
                <% tipos.forEach((pase) => { %>
                    <option value="<%= pase.id_pase %>"> <%= pase.tipo_pase%> </option>
                <% }) %> 
            </select>
        </div>

            <div class="form-group">
                <label for="my-input">Cupo</label>
                <input id="my-input" type="number" name="cupo" required>
            </div>

            <div class="form-group">
                <label for="my-input">Pase</label>
                <input id="my-input"  type="number" name="pase" required>
            </div>

            <div class="form-group">
                <label for="my-input">Costo</label>
                <input id="my-input"  type="number" name="costo" required>
            </div>


        
            <button type="submit">Guardar</button>
            <a href="https://minicore-01.herokuapp.com/tipos">Cancelar</a>
        </form>
    </div>
</div>


