<div >
   
    <div >
        <h5 class="card-title">Editar Datos del Usuario</h5>
        <p >
            <form action="/usuarios/actualizar" method="POST">
    
                <input type="hidden" name="id" value="<%=usuarios.id_usuario %>">
                
                
                    <div class="form-group">
                        <label for="my-input">Nombre Completo</label>
                        <input id="my-input" value="<%=usuarios.nombre%>" type="text" name="nombre">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Correo</label>
                        <input id="my-input" value="<%=usuarios.correo%>" type="text" name="correo" required>
                    </div>
                    
                    <button type="submit">Actualizar</button>
                    <a href="http:/usuarios">Cancelar</a>
                </form>
        </p>
    </div>
</div>

