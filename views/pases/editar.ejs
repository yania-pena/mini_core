<%- include ../layouts/cabecera.ejs %> 
<% if (pases) { %>
<br/>
<br/>
<div>
   
    <div class="card-body">
        <h5 class="card-title">Editar Datos del Pase</h5>
        <p class="card-text">
            <form action="/pases/actualizar" method="POST">
                <input id="id" name="id" value="<%= pases.id_pase%>" hidden>
                
                <div class="mb-3">
                    <label for="nombre" class="form-label">Usuario</label>
                    <select name="nombre" id="nombre" class="form-select" tabindex="1">
                        <option value="<%= pases.id_usuario %>" selected hidden>
                            <%= pases.nombre%>
                        </option>
                        <% usuario.forEach((usuario)=> { %>
                            <option value="<%=usuario.id_usuario %>">
                                <%= usuario.nombre%>
                            </option>
                            <% }) %>
                    </select>
                </div>
                    <div class="form-group">
                        <label for="fecha_compra">Fecha de Compra</label>
                        <input type="date" name="fecha_compra" id="fecha_compra" value="<%=pases.fecha_compra%>" required>
                    </div>
                    <div class="form-group">
                        <label for="expiracion">Fecha de Expiraci√≥n</label>
                        <input type="date" name="expiracion" id="expiracion" value="<%=pases.expiracion%>" required>
                    </div>
        
                    <div class="form-group">
                        <label for="tipo_pase">Tipo de Pase</label>
                        <input type="text"  name="tipo_pase" id="tipo_pase"  value="<%=pases.tipo_pase%>"  required>
                    </div>
        
                    
                    <button  type="submit">Actualizar</button>
                    <a href="http:/pases">Cancelar</a>
                </form>
        </p>
    </div>
</div>
<% } %>
